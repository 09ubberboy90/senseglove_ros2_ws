<launch>
    <arg name="robot" default="dk1" doc="The robot to run. Can be: dk1, fino, beta, unknown."/>

    <rosparam file="$(find senseglove_hardware_interface)/config/$(arg robot)/controllers.yaml" command="load"/>

    <param name="robot_description" textfile="$(find senseglove_description)/urdf/$(arg robot).urdf"/>

    <group ns="senseglove">
        <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

        <node name="controller_spawner" pkg="controller_manager" type="controller_manager" respawn="false"
              output="screen"
              args="spawn controller/joint_state controller/trajectory"
        />

        <node
                name="hardware_interface"
                pkg="senseglove_hardware_interface"
                type="senseglove_hardware_interface_node"
                args="$(arg robot)"
                output="screen"
                required="true"
        >
        </node>
    </group>
</launch>
